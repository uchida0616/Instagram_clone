<h1>投稿一覧</h1>
<p><%= notice %></p>
<table>
  <tr>
    <th>タイトル</th>
    <th>内容</th>
  </tr>
<% @post.each do |post| %>
  <tr>
    <td><%= post.user.name %></td>
    <td><%= post.title %></td>
    <td><%= post.content %></td>
    <td>
    <%= image_tag post.image.url  %>
    </td>
    <% if post.user_id == current_user.id %>
      <td><%= link_to '詳細を確認する', post_path(post.id) %></td>
      <td><%= link_to "ブログを編集する", edit_post_path(post.id) %></td>
      <td><%= link_to 'ブログを削除する', post_path(post.id), method: :delete ,data: { confirm: '削除しますか？'} %></td>
    <% else %>
      <% if post.favorites.present? %>
        <td><%= link_to 'お気に入り解除する', favorite_path(id: post.favorites.ids), method: :delete, class: 'btn btn-danger' %><td>
      <% else %>
        <td><%= link_to 'お気に入りする', favorites_path(post_id: post.id), method: :post, class: 'btn btn-primary' %><td>
      <% end %>
    <% end %>
  </tr>
<% end %>
</table>
<br>
<%= link_to '新しくブロクを投稿する', new_post_path %>
