<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <% if @user.icon? %>
        <%= image_tag @user.icon.url, size: '150x150', class: "img-circle"; %>
      <% else %>
        <%= image_tag "/no_icon.png", size: '150x150' %>
      <% end %>
    </div>
    <div class="col-xs-3" style="margin-top: 20px; margin-left: 20px;">
      <h1><%= @user.name %></h1>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <% @favorites.each do |favorite| %>
      <div class="col-xs-4" style="margin-top: 20px;">
        <%= image_tag "#{favorite.image}", :size =>'250x250' %>
      </div>
    <% end %>
  </div>
</div>
