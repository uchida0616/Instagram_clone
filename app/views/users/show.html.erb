<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <% if @user.icon? %>
        <%= image_tag @user.icon.url, size: '150x150', class: "img-circle"; %>
      <% else %>
        <%= image_tag "/no_icon.png", size: '150x150' %>
      <% end %>
    </div>
    <div class="col-xs-4" style="margin-top: 20px;">
      <h1><%= @user.name %></h1>
    </div>
    <div class="col-xs-3 col-xs-pull-1">
      <button type="button" style="margin-top: 30px;">
        <%= link_to "お気に入り一覧", favorite_post_user_path(current_user), class: "normal_link" %>
      </button>
    </div>
    <div class="col-xs-1 col-xs-pull-2">
      <% if @user.id == current_user.id %>
        <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-gear-wide" viewBox="0 0 16 16" data-toggle="modal" data-target="#testModal" style="margin-top: 30px;">
