        <div class="modal fade" id="testModal" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-body">
                <ul>
                  <li><%= link_to "プロフィールを編集する", edit_user_path(@user.id), class: "normal_link" %></li>
                  <li><%= link_to "プロフィールを削除する", user_path(@user.id), method: :delete,data: { confirm: 'アカウントを削除しますか？'}, class: "normal_link" %></li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
